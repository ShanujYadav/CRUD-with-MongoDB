<div class="container mt-3">
    <form action="/emp/final-update" method="post">
    <input type="hidden" name="id" value="{{emp.id}}">
        <div class="mb-3">
            <label class="form-label">Full Name</label>
            <input type="text" class="form-control" name="fullName" value="{{emp.fullName}}">
        </div >

        <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" name="email" value="{{emp.email}}">
        </div>

        <div class="mb-3">
            <label class="form-label">Phone</label>
            <input type="text" class="form-control" name="mobile" value="{{emp.mobile}}">
        </div>

        <div class="mb-3">
            <label class="form-label">City</label>
            <input type="text" class="form-control" name="city" value="{{emp.city}}">
        </div>
        <button type="submit" class="btn btn-info">Submit</button>
    </form>
</div>